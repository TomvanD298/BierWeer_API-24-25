<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {% block head %}
    <title>{{ title }}</title>
  {% endblock %}
  {% if NODE_ENV == "development" %}
    <script type="module" src="http://localhost:5173/@vite/client" defer></script>
    <script type="module" src="http://localhost:5173/client/index.js" defer></script>
    <script src="http://localhost:5173/server/layouts/base.js" ></script>

  {% else %}
    <link rel="stylesheet" href="/index.css">
    <link rel="icon" type="image/x-icon" href="/images/favicon/favicon.ico">

    <script src="/index.js" defer></script>

  {% endif %}
  {% block styles %}{% endblock %}
  {% block scripts %}{% endblock %}
</head>

<body data-temperature="{{ weather.temperature }}">
  <header>
    <img src="/images/beerdrips.png" alt="bierschuim">
  </header>
  <main>
    <div class="bierGlas"></div>
    {% block content %}{% endblock %}
  </main>
  <footer>
    
  </footer>
</body>
</html>
