{% block city %}

<section class="city">
  <h2>Zoek op stad</h2>
  <form method="GET" action="/" class="city-form">
    <label for="city"></label>
    <div>
      <p id="status"></p>
      <button id="find-me">📍</button>
    </div>
    <input type="text" id="city" name="city" placeholder="Bv: Amsterdam" value="{{ weather.city }}" required>
    <button type="submit">🍺</button>
  </form>
</section>


{% endblock %}